extends ../../layouts/admin

block content
	div.panel.panel-default.userListPanel
		div.panel-heading
			div
				h3.panel-title 员工列表
		div.panel-body.table-responsive.padding-0
			table.table.table-hover.table-striped.table-bordered.userList
				thead
					tr
						th 员工编号						
						th 员工姓名
						th 员工手机
						th 员工邮箱
						th.action.text-center 操作
				tbody
block extraScripts
	script(type='text/javascript', src='/static/javascripts/admin/users/list.js')
	script(type='text/template', id='editFormTpl')
		form.form-horizontal.updateUserForm
			fieldset
				div.form-group
					label.col-lg-2.control-label 员工编号
					div.col-lg-10
						span.text-muted <%=userId%>
				div.form-group
					label.col-lg-2.control-label 员工邮箱
					div.col-lg-10
						span.text-muted <%=email%>
				div.form-group
					label.col-lg-2.control-label 员工姓名
					div.col-lg-10
						input.form-control#inputName(placeholder='请填写姓名', value!='<%=name%>')
				div.form-group
					label.col-lg-2.control-label 员工手机
					div.col-lg-10
						input.form-control#inputMobile(placeholder='请填写手机', value!='<%=mobile%>')